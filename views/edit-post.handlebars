<div class="" data-post-id = {{post.id}}>
    <h3 class="text-center mb-5">Edit Post</h3>
    <div class="">
        <a href="/dashboard" class="btn btn-light border">Back to dashboard</a>
        <div class="btn btn-danger float-end mb-5" id = 'delete-post'>Delete</div>
        <div class="clearfix"></div>
        <div class="alert alert-success d-none message-block" role="alert">
               Post updated successfully
        </div>
            <div class="form-outline mb-4">
                <label class="form-label" for="post-name" >Title</label>
                <input type="input" id="post-name" class="form-control form-control-lg" value="{{post.name}}"/>
            </div>

            <div class="form-outline mb-4">
                <label class="form-label" for="post-content">Details</label>
                <textarea type="textarea" id="post-content" class="form-control form-control-lg" style="height:200px">{{post.description}}</textarea>
            </div>
    </div>
    <div class = "d-flex container justify-content-around"> 
        <div class="btn btn-primary m-3 col-2" id = 'update-post' data-post-id = {{post.id}}>Update</div>
        
        
    </div>

</div>

<script src="/js/edit-post.js"></script>